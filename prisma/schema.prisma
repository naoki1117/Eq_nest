
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hashedPassword String
  nickName String?
  tasks Task[]
  eqs Equipment[]
}

model Task {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  description String?
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


model Equipment {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  description String?
  userId Int
  category String
  quantity String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  
  


}
